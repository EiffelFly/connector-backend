{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/instill-ai/connector-backend/blob/main/configs/models/destination-definition.json",
  "title": "DestinationDefinition",
  "description": "The standard destination definition",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "destination_definition_id",
    "name",
    "docker_repository",
    "docker_image_tag",
    "documentation_url",
    "spec"
  ],
  "properties": {
    "destination_definition_id": {
      "type": "string",
      "format": "uuid",
      "title": "DestinationDefinitionID",
      "description": "The destination definition ID",
      "readOnly": true,
      "instill_order": 0
    },
    "name": {
      "type": "string",
      "title": "Name",
      "description": "The destination definition name",
      "minLength": 1,
      "maxLength": 256,
      "readOnly": true,
      "instill_order": 1
    },
    "docker_repository": {
      "type": "string",
      "title": "Docker repository",
      "description": "The docker repository of the connector",
      "minLength": 0,
      "maxLength": 256,
      "readOnly": true,
      "instill_order": 2
    },
    "docker_image_tag": {
      "type": "string",
      "title": "Docker image tag",
      "description": "The docker image tag of the connector",
      "minLength": 0,
      "maxLength": 256,
      "readOnly": true,
      "instill_order": 3
    },
    "documentation_url": {
      "type": "string",
      "format": "uri",
      "title": "Documentation URL",
      "description": "The documentation URL for the connector",
      "minLength": 1,
      "maxLength": 1024,
      "readOnly": true,
      "instill_order": 4
    },
    "icon": {
      "type": "string",
      "format": "uri-reference",
      "title": "Icon",
      "description": "The connector icon URI",
      "minLength": 1,
      "maxLength": 256,
      "readOnly": true,
      "instill_order": 5
    },
    "connection_type": {
      "type": "string",
      "title": "Connection type",
      "description": "The connection type of the connector",
      "enum": [
        "CONNECTION_TYPE_UNSPECIFIED",
        "CONNECTION_TYPE_DIRECTNESS",
        "CONNECTION_TYPE_API",
        "CONNECTION_TYPE_FILE",
        "CONNECTION_TYPE_DATABASE",
        "CONNECTION_TYPE_CUSTOM"
      ],
      "default": "CONNECTION_TYPE_UNSPECIFIED",
      "readOnly": true,
      "instill_order": 6
    },
    "spec": {
      "type": "object",
      "$ref": "./connector.json",
      "readOnly": true,
      "instill_order": 7
    },
    "tombstone": {
      "type": "boolean",
      "title": "Tombstone",
      "description": "If not set or false, the configuration is active. if true, then this configuration is permanently off.",
      "default": false,
      "readOnly": true,
      "instill_order": 8
    },
    "public": {
      "type": "boolean",
      "title": "Public",
      "description": "True if this connector definition is available to all owners",
      "default": false,
      "readOnly": true,
      "instill_order": 9
    },
    "custom": {
      "type": "boolean",
      "title": "Custom",
      "description": "Whether this is a custom connector definition",
      "default": false,
      "readOnly": true,
      "instill_order": 10
    },
    "releaseStage": {
      "type": "string",
      "title": "Release stage",
      "description": "The release stage of the connector",
      "enum": [
        "RELEASE_STAGE_UNSPECIFIED",
        "RELEASE_STAGE_ALPHA",
        "RELEASE_STAGE_BETA",
        "RELEASE_STAGE_GENERALLY_AVAILABLE",
        "RELEASE_STAGE_CUSTOM"
      ],
      "default": "RELEASE_STAGE_UNSPECIFIED",
      "readOnly": true,
      "instill_order": 11
    },
    "releaseDate": {
      "type": "string",
      "format": "date",
      "title": "Release date",
      "description": "The date when this connector was first released, in yyyy-mm-dd format.",
      "readOnly": true,
      "instill_order": 12
    }
  }
}
